" ~/.vimrc
colorscheme desert
syntax on
set ruler
set autoindent smartindent
set smarttab

" Highlight things that we find with the search
set hlsearch

" Set off the other parens
highlight MatchParen ctermbg=4

" Show matching brackets
set showmatch

" Remove Toolbar
set guioptions-=T

" Do not wrap long lines
set nowrap

" Line Numbers
set nu
